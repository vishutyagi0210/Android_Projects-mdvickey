<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_id"
        android:layout_width="340dp"
        android:layout_height="340dp"
        app:cardElevation="4dp">

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:rowCount="3"
            android:columnCount="3">
            <Button
                android:onClick="ButtonClicked"
                android:id="@+id/btnView1"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="7dp"
                android:text="1"
                android:textSize="45sp"
                android:textStyle="bold" />
            <Button
                android:onClick="ButtonClicked"
                android:id="@+id/btnView2"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="7dp"
                android:text="2"
                android:textSize="45sp"
                android:textStyle="bold" />
            <Button
                android:onClick="ButtonClicked"
                android:id="@+id/btnView3"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="7dp"
                android:text="3"
                android:textSize="45sp"
                android:textStyle="bold" />
            <Button
                android:onClick="ButtonClicked"
                android:id="@+id/btnView4"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="7dp"
                android:text="4"
                android:textSize="45sp"
                android:textStyle="bold" />
            <Button
                android:onClick="ButtonClicked"
                android:id="@+id/btnView5"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="7dp"
                android:text="5"
                android:textSize="45sp"
                android:textStyle="bold" />
            <Button
                android:onClick="ButtonClicked"
                android:id="@+id/btnView6"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="7dp"
                android:text="6"
                android:textSize="45sp"
                android:textStyle="bold" />
            <Button
                android:onClick="ButtonClicked"
                android:id="@+id/btnView7"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="7dp"
                android:text="7"
                android:textSize="45sp"
                android:textStyle="bold" />
            <Button
                android:onClick="ButtonClicked"
                android:id="@+id/btnView8"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_margin="7dp"
                android:text="8"
                android:textSize="45sp"
                android:textStyle="bold" />
        </GridLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rest"
        android:layout_margin="37dp"
        android:onClick="resetBoard"
        />

</LinearLayout>